<%= form_for(@article, html: {multipart: true}) do |a|%>
 <ul>
 <% @article.errors.full_messages.each do |error| %>
 	<li><%= error %></li>
 <% end  %>
 </ul>
 <p>
 	<%= a.label :title %><br />
 	<%= a.text_field :title %>
 </p>
 <p>
 	<%= a.label :body %><br />
 	<%= a.text_area :body %>	
 </p>
 <p>
 	<%= a.label :tag_list%><br />
 	<%= a.text_field :tag_list %>
 </p>
 <p>
<p>
  <% if @article.image.exists? %>
      <%= image_tag @article.image.url(:medium) %><br/>
  <% end %>
  <%= a.label :image, "Attach a New Image" %><br />
  <%= a.file_field :image %>
 </p>
 <p>
 	<%= a.submit %>
 </p>
<% end %>